<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <!--
      Added the entity Business.
  -->
  <changeSet id="20250528110106-1" author="jhipster">
    <createTable tableName="business">
      <column name="id" type="bigint">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="name" type="varchar(255)">
        <constraints nullable="false" />
      </column>

      <column name="created_date" type="${datetimeType}">
        <constraints nullable="true" />
      </column>

      <column name="description" type="varchar(500)">
        <constraints nullable="true" />
      </column>

      <column name="address" type="varchar(255)">
        <constraints nullable="true" />
      </column>

      <column name="phone_number" type="varchar(255)">
        <constraints nullable="true" />
      </column>

      <column name="break_between_appointments_min" type="integer">
        <constraints nullable="true" />
      </column>

      <column name="logo" type="varchar(255)">
        <constraints nullable="true" />
      </column>

      <column name="banner_url" type="varchar(255)">
        <constraints nullable="true" />
      </column>

      <column name="appointment_approval_required" type="BOOLEAN" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>

      <column name="owner_id" type="bigint">
        <constraints nullable="true" unique="true" uniqueConstraintName="ux_business__user_id" />
      </column>

      <column name="max_weeks_in_advance" type="INT" defaultValueNumeric="26">
        <constraints nullable="false"/>
      </column>

      <column name="theme" type="varchar(255)">
        <constraints nullable="false" />
      </column>

      <!-- !!! REMOVED business_employee_id !!! -->
      <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
    </createTable>

    <dropDefaultValue tableName="business" columnName="created_date" columnDataType="${datetimeType}"/>
  </changeSet>

  <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

  <!-- Faker data -->
  <changeSet id="20250528110106-1-data" author="jhipster" context="faker">
    <loadData
      file="config/liquibase/fake-data/business.csv"
      separator=";"
      tableName="business"
      usePreparedStatements="true">

      <column name="id" type="numeric"/>
      <column name="name" type="string"/>
      <column name="created_date" type="date"/>
      <column name="description" type="string"/>
      <column name="address" type="string"/>
      <column name="phone_number" type="string"/>
      <column name="break_between_appointments_min" type="numeric"/>
      <column name="logo" type="string"/>
      <column name="banner_url" type="string"/>
      <column name="appointment_approval_required" type="boolean"/>
      <column name="owner_id" type="numeric"/>
      <column name="max_weeks_in_advance" type="numeric"/>
      <column name="theme" type="string"/>

      <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
    </loadData>
  </changeSet>
</databaseChangeLog>
