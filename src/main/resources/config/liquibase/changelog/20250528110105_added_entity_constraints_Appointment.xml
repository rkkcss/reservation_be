<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity Appointment.
    -->
    <changeSet id="20250528110105-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="guest_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment__guest_id"
                                 referencedColumnNames="id"
                                 referencedTableName="guest"
                                 />

        <addForeignKeyConstraint baseColumnNames="offering_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment__offering_id"
                                 referencedColumnNames="id"
                                 referencedTableName="offering"
        />
        <addForeignKeyConstraint
                                baseTableName="appointment"
                                baseColumnNames="business_employee_id"
                                referencedTableName="business_employee"
                                referencedColumnNames="id"
                                constraintName="fk_appointment_business_employee"
        />
    </changeSet>
</databaseChangeLog>
