<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- MAIN TABLE -->
  <changeSet id="20250119-1-create-business-employee" author="dani">
    <createTable tableName="business_employee">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="business_id" type="BIGINT">
        <constraints nullable="true" foreignKeyName="fk_business_employee_business"
                     referencedTableName="business" referencedColumnNames="id"/>
      </column>

      <column name="user_id" type="BIGINT">
        <constraints nullable="true" foreignKeyName="fk_business_employee_user" referencedColumnNames="id"/>
      </column>

      <column name="role" type="VARCHAR(255)"/>

      <column name="created_date" type="TIMESTAMP"/>
      <column name="modified_date" type="TIMESTAMP"/>

      <column name="created_by" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>

      <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE"/>

      <column name="phone_number" type="varchar(15)" >
        <constraints nullable="true" />
      </column>

    </createTable>
  </changeSet>

  <changeSet id="20250119-1b-unique-business-user" author="dani">
    <addUniqueConstraint
      tableName="business_employee"
      columnNames="business_id, user_id"
      constraintName="uq_business_user_unique"/>
  </changeSet>

  <!-- PERMISSIONS ELEMENT COLLECTION -->
  <changeSet id="20250119-2-business-employee-permissions" author="dani">
    <createTable tableName="business_employee_permissions">
      <column name="business_employee_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="fk_be_perm_employee"
                     referencedTableName="business_employee" referencedColumnNames="id"/>
      </column>

      <column name="permission" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Composite key: employee + permission -->
    <addPrimaryKey
      tableName="business_employee_permissions"
      columnNames="business_employee_id, permission"
      constraintName="pk_business_employee_permissions"/>
  </changeSet>

  <!-- FAKER js location -->
  <changeSet id="20250119-3-business-employee-fake-data" author="dani" context="faker">
    <loadData
      file="config/liquibase/fake-data/business-employee.csv"
      tableName="business_employee"
      encoding="UTF-8"
      strict="false"
      separator=";">

      <column name="id" type="numeric"/>
      <column name="business_id" type="numeric"/>
      <column name="user_id" type="numeric"/>
      <column name="createdDate" type="date"/>
      <column name="modifiedDate" type="date"/>
      <column name="createdBy" type="string"/>
      <column name="status" type="string"/>
    </loadData>

    <loadData
      file="config/liquibase/fake-data/business_employee_permissions.csv"
      tableName="business_employee_permissions"
      encoding="UTF-8"
      strict="false"
      separator=";" />
  </changeSet>

</databaseChangeLog>
